<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.MainPage"
             xmlns:models="clr-namespace:TaskManager.Models"
             xmlns:viewmodel="clr-namespace:TaskManager.ViewModel"
             x:DataType="viewmodel:MainViewModel"
             Title="Home"
             NavigationPage.HasBackButton="False"
             >

    <Grid RowDefinitions="100, Auto, *"
          ColumnDefinitions=".75*,.25*"
          Padding="10"
          RowSpacing="10"
          ColumnSpacing="10">
        <Image Grid.ColumnSpan="2"
               Source="logo.png"
               BackgroundColor="Transparent"
               ></Image>

        <Label Grid.Row="1"
               Grid.Column="0"
               FontSize="24"
               VerticalOptions="Center"
               >Task list</Label>
        <Button Text="Add" 
                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}},Path=AddCommand}"
                FontSize="16"
                Grid.Row="1"
                Grid.Column="1"
                />
        <ActivityIndicator
            IsRunning="{Binding IsLoading}"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            />
        <CollectionView Grid.Row="2"
                        Grid.ColumnSpan="2"
                        ItemsSource="{Binding Tasks}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:TaskModel">
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems>
                                <SwipeItem Text="Delete"
                                           BackgroundColor="Red"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}},Path=DeleteCommand}"
                                           CommandParameter="{Binding .}"
                                           ></SwipeItem>
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Grid Padding="3">
                            <Frame>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer
                                              Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:MainViewModel}},Path=TapCommand}"
                                              CommandParameter="{Binding .}"
                                        />
                                </Frame.GestureRecognizers>
                                <Label Text="{Binding Title}"
                                       FontSize="16">
                                </Label>
                            </Frame>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
