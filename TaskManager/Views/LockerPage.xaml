<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskManager.Views.LockerPage"
             Title="LockerPage">
    <VerticalStackLayout>

        <!-- Login form -->
        <StackLayout x:Name="loginForm" IsVisible="False">
            <Entry Placeholder="Username"/>
            <Entry Placeholder="Password" IsPassword="True"/>
            <Button Text="Login"/>
        </StackLayout>

        <!-- Register form -->
        <StackLayout x:Name="registerForm" IsVisible="{Binding IsRegister}">
            <Entry Placeholder="Username"/>
            <Entry Placeholder="Password" IsPassword="True"/>
            <Entry Placeholder="Repeat Password" IsPassword="True"/>
            <Button Text="Register"/>
        </StackLayout>
        

        <Button Text="Back"   
               FontSize="15" 
               AbsoluteLayout.LayoutFlags="PositionProportional"
               AbsoluteLayout.LayoutBounds="1, 0, 80, 40"
               Command="{Binding GoBackCommand}"
         />
    </VerticalStackLayout>
</ContentPage>